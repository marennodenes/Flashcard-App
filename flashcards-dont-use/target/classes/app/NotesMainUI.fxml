<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.NotesController">
    <children>
        <Label text="Enter a title for your note:">
            <VBox.margin>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
        </Label>
      
        <TextField fx:id="titleInputField" promptText="Type your note title here...">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
            </VBox.margin>
        </TextField>
    </children>
</VBox>