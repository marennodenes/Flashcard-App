  "version": "0.2.0",
  "configurations": [
    {
      "type": "java",
      "name": "ServerApplication",
      "request": "launch",
      "mainClass": "server.ServerApplication",
      "projectName": "server",
      "vmArgs": [
        "--add-reads",
        "flashcards.server=ALL-UNNAMED",
        "--add-opens",
        "flashcards.server/server=ALL-UNNAMED",
        "--add-opens",
        "flashcards.server/server.controller=ALL-UNNAMED",
        "--add-opens",
        "flashcards.server/server.service=ALL-UNNAMED",
        "--add-opens",
        "java.base/java.lang=ALL-UNNAMED"
      ]
    },
    {
      "type": "java",
      "name": "FlashcardApp",
      "request": "launch",
      "mainClass": "flashcards.core/ui.FlashcardApp"
    },
    {
      "type": "java",
      "name": "FlashcardApp",
      "request": "launch",
      "mainClass": "flashcards.fxui/ui.FlashcardApp",
      "projectName": "fxui"
    },
    {
      "type": "java",
      "name": "FlashcardApp",
      "request": "launch",
      "mainClass": "ui.FlashcardApp",
      "projectName": "fxui"
    },
    {
      "type": "java",
      "name": "Current File",
      "request": "launch",
      "mainClass": "${file}"
    },
    {
      "type": "java",
      "name": "flashcards App",
      "request": "launch",
      "mainClass": "app/app.App",
      "vmArgs": [
        "--add-opens",
        "app/app=ALL-UNNAMED",
        "--add-exports",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED",
        "--add-opens",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
      ],
      "projectName": "flashcards"
    },
    {
      "type": "java",
      "name": "modules-template App",
      "request": "launch",
      "mainClass": "calc.ui/ui.App",
      "vmArgs": [
        "--add-opens",
        "calc.ui/ui=ALL-UNNAMED",
        "--add-exports",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED",
        "--add-opens",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
      ],
      "projectName": "modules-ui"
    },
    {
      "type": "java",
      "name": "packages-template App",
      "request": "launch",
      "mainClass": "app/ui.App",
      "vmArgs": [
        "--add-opens",
        "app/core=ALL-UNNAMED",
        "--add-opens",
        "app/ui=ALL-UNNAMED",
        "--add-exports",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED",
        "--add-opens",
        "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
      ],
      "projectName": "packages-template"
    }
  ]
}